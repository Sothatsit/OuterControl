{
  "name": "Outside-Control",
  "description": "Block distracting websites and track usage",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "downloads",
    "webNavigation",
    "offscreen"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "blocked.css", "giphy.gif"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "exports.html"
  }
}
